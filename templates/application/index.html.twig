{% extends 'base.html.twig' %}

{% block title "subscribe" %}

{% block body %}

    <div class="container">
        <p class="h1 text-secondary text-center mt-5 mb-3">Welcome</p>
        <div class="d-flex justify-content-center">
            {{ form_start(form) }}
                <div class="w-100">
                    {{ form_row(form.name) }}
                </div>

                <div class="w-100">
                    {{ form_row(form.sector) }}
                </div>

                <div class="w-100">
                    {{ form_row(form.course) }}
                </div>

                <div class="w-100">
                    {{ form_row(form.birthDate) }}
                </div>

                <div class="mt-3 d-grid">
                    <input type="submit" class="btn btn-primary btn-block" value="Submit">
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
